{
    "manifest_version": 2,

    "name": "Goopg",
    "description": "GPG support for GMail",
    "version": "1.0",

    "permissions": [
        "https://mail.google.com/*",
        "http://mail.google.com/*",
        "background",
        "nativeMessaging"
    ],

    "background": {
        "scripts": ["goopg.js"]
    },

    "content_scripts": [{
        "matches": [
            "https://mail.google.com/*",
            "http://mail.google.com/*"
        ],
        "js": ["inject.js"]
    }],

    "externally_connectable": {
        "matches": ["*://mail.google.com/*"]
    },

    "web_accessible_resources": [
        "goopg-web.js"
    ]
}
